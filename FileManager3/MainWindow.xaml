<Window x:Class="FileManager3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManager3"
        mc:Ignorable="d"
        Title="Файловий менеджер" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхня панель з вибором дисків -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Ліва панель з дисками -->
            <StackPanel Grid.Column="0" 
                      Orientation="Horizontal" 
                      Margin="5,5,5,5">
                <TextBlock Text="Диски:" 
                          VerticalAlignment="Center" 
                          Margin="0,0,5,0"/>
                <ItemsControl ItemsSource="{Binding AvailableDrives}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Name}" 
                                    Command="{Binding DataContext.SelectLeftDriveCommand, 
                                              RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"
                                    Margin="2,0"
                                    Padding="3,0"
                                    Height="22"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Кнопка перемикання режиму -->
            <Button Grid.Column="1" 
                    Content="{Binding ToggleViewModeText}"
                    Command="{Binding ToggleViewModeCommand}"
                    Margin="5"
                    Padding="5,0"
                    MinWidth="60"
                    Height="22"/>

            <!-- Права панель з дисками -->
            <StackPanel Grid.Column="2" 
                      Orientation="Horizontal" 
                      Margin="5,5,5,5"
                      Visibility="{Binding RightPanelVisibility}">
                <TextBlock Text="Диски:" 
                          VerticalAlignment="Center" 
                          Margin="0,0,5,0"/>
                <ItemsControl ItemsSource="{Binding AvailableDrives}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Name}" 
                                    Command="{Binding DataContext.SelectRightDriveCommand, 
                                              RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"
                                    Margin="2,0"
                                    Padding="3,0"
                                    Height="22"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>

        <!-- Основні панелі з файлами -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Ліва панель -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Кнопка "Назад" для лівої панелі -->
                <Button Content="← Назад" 
                        Command="{Binding BackLeftCommand}" 
                        Grid.Row="0"
                        Margin="5,0,5,5" 
                        Padding="5,0"
                        MinWidth="60"
                        Height="22"/>

                <ListView ItemsSource="{Binding LeftPanelFiles}" 
                        SelectedItem="{Binding SelectedLeftItem}"
                        Grid.Row="1"
                        Margin="5,0,5,5"
                        MouseDoubleClick="ListView_MouseDoubleClick">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Назва" DisplayMemberBinding="{Binding Name}" Width="180"/>
                            <GridViewColumn Header="Розширення" DisplayMemberBinding="{Binding Extension}" Width="70"/>
                            <GridViewColumn Header="Розмір" DisplayMemberBinding="{Binding FormattedSize}" Width="70"/>
                            <GridViewColumn Header="Змінено" DisplayMemberBinding="{Binding FormattedDate}" Width="100"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>

            <!-- Права панель -->
            <Grid Grid.Column="1" Visibility="{Binding RightPanelVisibility}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Кнопка "Назад" для правої панелі -->
                <Button Content="← Назад" 
                        Command="{Binding BackRightCommand}" 
                        Grid.Row="0"
                        Margin="5,0,5,5" 
                        Padding="5,0"
                        MinWidth="60"
                        Height="22"/>

                <ListView ItemsSource="{Binding RightPanelFiles}" 
                        SelectedItem="{Binding SelectedRightItem}"
                        Grid.Row="1"
                        Margin="5,0,5,5"
                        MouseDoubleClick="ListView_MouseDoubleClick">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Назва" DisplayMemberBinding="{Binding Name}" Width="180"/>
                            <GridViewColumn Header="Розширення" DisplayMemberBinding="{Binding Extension}" Width="70"/>
                            <GridViewColumn Header="Розмір" DisplayMemberBinding="{Binding FormattedSize}" Width="70"/>
                            <GridViewColumn Header="Змінено" DisplayMemberBinding="{Binding FormattedDate}" Width="100"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Grid>

        <!-- Нижня панель з кнопками -->
        <Grid Grid.Row="2" Background="#FFE0E0E0">
            <StackPanel Orientation="Horizontal" 
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Center"
                      Margin="0,5">
                <Button Content="Відкрити" 
                        Command="{Binding OpenFileCommand}" 
                        Margin="5,0" 
                        Padding="5,0"
                        MinWidth="80"
                        Height="22"/>
                <Button Content="Переглянути" 
                        Command="{Binding PreviewFileCommand}" 
                        Margin="5,0" 
                        Padding="5,0"
                        MinWidth="80"
                        Height="22"/>
                <Button Content="Копіювати" 
                        Command="{Binding CopyCommand}" 
                        Margin="5,0" 
                        Padding="5,0"
                        MinWidth="80"
                        Height="22"/>
                <Button Content="Вирізати" 
                        Command="{Binding CutCommand}" 
                        Margin="5,0" 
                        Padding="5,0"
                        MinWidth="80"
                        Height="22"/>
                <Button Content="Вставити" 
                        Command="{Binding PasteCommand}" 
                        Margin="5,0" 
                        Padding="5,0"
                        MinWidth="80"
                        Height="22"/>
                <Button Content="Видалити" 
                        Command="{Binding DeleteCommand}" 
                        Margin="5,0" 
                        Padding="5,0"
                        MinWidth="80"
                        Height="22"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
