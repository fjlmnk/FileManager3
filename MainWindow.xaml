<Window x:Class="FileManager3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManager3"
        mc:Ignorable="d"
        Title="Файловий менеджер" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0">
            <TabItem Header="Двопанельний режим">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Верхня панель з кнопкою "Назад" та заголовками -->
                    <Grid Grid.Row="0" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Content="← Назад" 
                                Command="{Binding BackCommand}" 
                                Margin="5" 
                                Padding="10,5"
                                MinWidth="80"/>
                        
                        <TextBlock Text="Ліва панель:" 
                                Grid.Column="1" 
                                VerticalAlignment="Center" 
                                Margin="5"/>
                        <TextBlock Text="Права панель:" 
                                Grid.Column="2" 
                                VerticalAlignment="Center" 
                                Margin="5"/>
                    </Grid>

                    <!-- Панелі з дисками -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Ліва панель з дисками -->
                        <StackPanel Grid.Column="0" 
                                  Orientation="Horizontal" 
                                  Margin="5">
                            <TextBlock Text="Диски:" 
                                      VerticalAlignment="Center" 
                                      Margin="0,0,10,0"/>
                            <ItemsControl ItemsSource="{Binding AvailableDrives}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding Name}" 
                                                Command="{Binding DataContext.SelectLeftDriveCommand, 
                                                          RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Margin="2"
                                                Padding="5,2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- Права панель з дисками -->
                        <StackPanel Grid.Column="1" 
                                  Orientation="Horizontal" 
                                  Margin="5">
                            <TextBlock Text="Диски:" 
                                      VerticalAlignment="Center" 
                                      Margin="0,0,10,0"/>
                            <ItemsControl ItemsSource="{Binding AvailableDrives}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding Name}" 
                                                Command="{Binding DataContext.SelectRightDriveCommand, 
                                                          RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Margin="2"
                                                Padding="5,2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Grid>

                    <!-- Основні панелі з файлами -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Ліва панель -->
                        <ListView ItemsSource="{Binding LeftPanelFiles}" 
                                SelectedItem="{Binding SelectedLeftItem}"
                                Grid.Column="0" 
                                Margin="5"
                                MouseDoubleClick="ListView_MouseDoubleClick">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Назва" DisplayMemberBinding="{Binding Name}" Width="250"/>
                                    <GridViewColumn Header="Розширення" DisplayMemberBinding="{Binding Extension}" Width="100"/>
                                    <GridViewColumn Header="Розмір" DisplayMemberBinding="{Binding FormattedSize}" Width="100"/>
                                    <GridViewColumn Header="Змінено" DisplayMemberBinding="{Binding FormattedDate}" Width="150"/>
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <!-- Права панель -->
                        <ListView ItemsSource="{Binding RightPanelFiles}" 
                                SelectedItem="{Binding SelectedRightItem}"
                                Grid.Column="1" 
                                Margin="5"
                                MouseDoubleClick="ListView_MouseDoubleClick">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Назва" DisplayMemberBinding="{Binding Name}" Width="250"/>
                                    <GridViewColumn Header="Розширення" DisplayMemberBinding="{Binding Extension}" Width="100"/>
                                    <GridViewColumn Header="Розмір" DisplayMemberBinding="{Binding FormattedSize}" Width="100"/>
                                    <GridViewColumn Header="Змінено" DisplayMemberBinding="{Binding FormattedDate}" Width="150"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>

                    <!-- Нижня панель з кнопками -->
                    <Grid Grid.Row="3" Background="#FFE0E0E0" Margin="5">
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Center">
                            <Button Content="Відкрити" 
                                    Command="{Binding OpenFileCommand}" 
                                    Margin="5" 
                                    Padding="10,5"
                                    MinWidth="100"/>
                            <Button Content="Копіювати" 
                                    Command="{Binding CopyCommand}" 
                                    Margin="5" 
                                    Padding="10,5"
                                    MinWidth="100"/>
                            <Button Content="Перемістити" 
                                    Command="{Binding MoveCommand}" 
                                    Margin="5" 
                                    Padding="10,5"
                                    MinWidth="100"/>
                            <Button Content="Видалити" 
                                    Command="{Binding DeleteCommand}" 
                                    Margin="5" 
                                    Padding="10,5"
                                    MinWidth="100"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header="Сортування за типами">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Панель з дисками -->
                    <StackPanel Grid.Row="0" 
                              Orientation="Horizontal" 
                              Margin="5">
                        <TextBlock Text="Виберіть диск:" 
                                  VerticalAlignment="Center" 
                                  Margin="0,0,10,0"/>
                        <ItemsControl ItemsSource="{Binding AvailableDrives}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding Name}" 
                                            Command="{Binding DataContext.SelectDriveForSortingCommand, 
                                                      RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Margin="2"
                                            Padding="5,2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Список файлів, сортованих за типами -->
                    <ListView Grid.Row="1" 
                             ItemsSource="{Binding SortedFiles}" 
                             Margin="5">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Тип файлу" DisplayMemberBinding="{Binding FileType}" Width="150"/>
                                <GridViewColumn Header="Кількість файлів" DisplayMemberBinding="{Binding FileCount}" Width="100"/>
                                <GridViewColumn Header="Загальний розмір" DisplayMemberBinding="{Binding TotalSize}" Width="150"/>
                                <GridViewColumn Header="Файли" Width="400">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <ListView ItemsSource="{Binding Files}" Height="200">
                                                <ListView.View>
                                                    <GridView>
                                                        <GridViewColumn Header="Назва" DisplayMemberBinding="{Binding Name}" Width="200"/>
                                                        <GridViewColumn Header="Розмір" DisplayMemberBinding="{Binding FormattedSize}" Width="100"/>
                                                        <GridViewColumn Header="Шлях" DisplayMemberBinding="{Binding Path}" Width="300"/>
                                                    </GridView>
                                                </ListView.View>
                                            </ListView>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
